pipeline {
    agent any

    tools {
        maven 'Maven 3.6.1'
    }
    
    stages {
        stage ('worker-build') {
            steps {
                echo 'compiling worker app'
                dir('worker') {
                    sh 'mvn compile'
                }
            }
        }
        stage ('worker-test') {
            steps {
                echo 'Running Unit Tests on worker app'
                dir ('worker') {
                    sh 'mvn clean test'
                }
            }
        }
        stage ('worker-package') {
            steps {
                echo 'Packaging worker app'
                dir ('worker') {
                    sh 'mvn package -D skipTests'
                }
            }
        }
    }
    
    post {
        always {
            archiveArtifacts artifacts: '**/target/*.jar', figerprint: true
            echo 'Pipeline for worker is complete..'
        }
    }
}